# ========================================
# ZSH Configuration for WSL/Linux
# ========================================

# Source universal configuration
source ~/.zshrc-base

# ---- WSL VISUAL ----
export VISUAL='zed --wait'

# ---- WSL PATH Additions ----
path_prepend "$HOME/.local/bin"

# pnpm
export PNPM_HOME="$HOME/.local/share/pnpm"
path_prepend "$PNPM_HOME"

# Bun
export BUN_INSTALL="$HOME/.bun"
path_prepend "$BUN_INSTALL/bin"

# Deno
export DENO_INSTALL="$HOME/.deno"
path_prepend "$DENO_INSTALL/bin"

# uv (Python)
path_append "$HOME/.local/share/uv/bin"

# OpenCode
path_prepend "$HOME/.opencode/bin"

# Cargo (Rust)
path_append "$HOME/.cargo/bin"

# Go bin directory - add at the end to ensure it takes precedence over Windows paths
export PATH="$HOME/go/bin:$PATH"

# ---- WSL-Specific Aliases ----
alias explorer='/mnt/c/WINDOWS/explorer.exe'

# ---- WSL-Specific Functions ----

# Find process using a port (with ss fallback for WSL)
port() {
    if [ -z "$1" ]; then
        echo "Usage: port <port_number>"
        return 1
    fi
    sudo lsof -i ":$1" || sudo ss -tulpn | grep ":$1"
}

# Outfitting repository configuration functions
get_outfitting_repo() {
    local config_file="$HOME/.config/outfitting/repo-path"
    if [ -f "$config_file" ]; then
        cat "$config_file"
        return 0
    else
        return 1
    fi
}

set_outfitting_repo() {
    local repo_path="$1"
    if [ -z "$repo_path" ]; then
        echo "Error: No repository path provided"
        return 1
    fi

    # Convert to absolute path
    repo_path="$(cd "$repo_path" 2>/dev/null && pwd)" || {
        echo "Error: Path does not exist: $repo_path"
        return 1
    }

    local config_dir="$HOME/.config/outfitting"
    local config_file="$config_dir/repo-path"

    # Create config directory
    mkdir -p "$config_dir"

    # Store path
    echo "$repo_path" > "$config_file"
    chmod 600 "$config_file"

    echo "✓ Repository path set to: $repo_path"
    return 0
}

setup_outfitting_repo() {
    repo_path="$HOME/Workspace/outfitting"
    [ ! -d "$repo_path" ] && mkdir -p "$(dirname "$repo_path")" && git clone https://github.com/jfalava/outfitting.git "$repo_path"
    set_outfitting_repo "$repo_path"
    echo "✓ Repository ready: $repo_path"
}

# Home Manager management functions - streamlined for personal use
hm-sync() {
    local repo_path=$(get_outfitting_repo) || { setup_outfitting_repo; repo_path=$(get_outfitting_repo); }
    cp "$repo_path/packages/x64-linux/home.nix" ~/.config/home-manager/ && home-manager switch
    echo "✓ Synced from $repo_path"
}

# Profile switching functions - optimized for personal use
hm-personal() {
    local repo_path=$(get_outfitting_repo) || { setup_outfitting_repo; repo_path=$(get_outfitting_repo); }
    local home_nix="$repo_path/packages/x64-linux/home.nix"
    # Portable sed approach (works on both BSD and GNU sed)
    sed 's/activeProfile = "[^"]*"/activeProfile = "personal"/' "$home_nix" > "$home_nix.tmp" && mv "$home_nix.tmp" "$home_nix"
    cp "$home_nix" ~/.config/home-manager/ && home-manager switch
    echo "✓ Personal profile active"
}

hm-work() {
    local repo_path=$(get_outfitting_repo) || { setup_outfitting_repo; repo_path=$(get_outfitting_repo); }
    local home_nix="$repo_path/packages/x64-linux/home.nix"
    # Portable sed approach (works on both BSD and GNU sed)
    sed 's/activeProfile = "[^"]*"/activeProfile = "work"/' "$home_nix" > "$home_nix.tmp" && mv "$home_nix.tmp" "$home_nix"
    cp "$home_nix" ~/.config/home-manager/ && home-manager switch
    echo "✓ Work profile active (AWS, K8s, etc.)"
}

# Quick profile check
hm-profile() {
    local current=$(grep 'activeProfile' ~/.config/home-manager/home.nix 2>/dev/null | cut -d'"' -f2)
    [[ -n "$1" ]] && { hm-"$1" 2>/dev/null || echo "Usage: hm-profile <personal|work>"; } || echo "Current: $current"
}

hm-switch() {
    local current_profile=$(grep 'activeProfile' ~/.config/home-manager/home.nix 2>/dev/null | cut -d'"' -f2 || echo "unknown")
    echo "Applying Home Manager configuration (current profile: $current_profile)..."
    home-manager switch
}

# Deprecated: Use hm-work() instead
hm-switch-work() {
    echo "⚠️  This function is deprecated. Use 'hm-work' instead."
    hm-work
}

hm-update() {
    echo "Updating Nix channels and Home Manager..."
    
    # Update channels (like brew update)
    nix-channel --update
    
    # Apply updated configuration
    home-manager switch

    echo ""
    echo "✓ Nix packages updated successfully!"
    echo ""
    echo "Packages are now floating with nixpkgs-unstable channel (like Homebrew)"
}

hm-rollback() {
    echo "Available generations:"
    home-manager generations
    echo ""
    echo "To rollback, run the activation script of your desired generation (listed above)"
}

hm-clean() {
    echo "Cleaning old Home Manager generations..."
    nix-collect-garbage -d
    echo "Cleaning complete!"
}

# Quick system update
update-all() {
    sudo apt update && sudo apt upgrade -y && sudo apt autoremove -y
    hm-update && hm-clean
    command -v bun >/dev/null && bun update -g
    echo "✓ System updated"
}

remote-update() {
    curl -L https://wsl.jfa.dev | bash -s -- --update-only
}

# SSH Agent - Persistent across shell sessions
SSH_AGENT_FILE="$HOME/.ssh/agent-env"

if [ -f "$SSH_AGENT_FILE" ]; then
    eval "$(cat "$SSH_AGENT_FILE")" > /dev/null 2>&1
fi

if [ -z "$SSH_AUTH_SOCK" ] || [ ! -S "$SSH_AUTH_SOCK" ]; then
    ssh_agent_output="$(ssh-agent -s)"
    echo "$ssh_agent_output" > "$SSH_AGENT_FILE"
    eval "$ssh_agent_output" > /dev/null 2>&1
    chmod 600 "$SSH_AGENT_FILE"
fi

unset SSH_AGENT_FILE

# Ensure Linux go/bin takes precedence over Windows paths
export PATH="$HOME/go/bin:$PATH"